                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "propertyId",
                  "value": "{{property_id}}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:4002/upload/image",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4002",
              "path": ["upload", "image"]
            },
            "description": "⚠️ Chọn file ảnh từ máy tính trong tab Body → form-data → file"
          }
        },
