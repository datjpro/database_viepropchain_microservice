    {
      "name": "5. IPFS File Upload",
      "item": [
        {
          "name": "Upload Property Image",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Image uploaded\", function () {",
                  "    pm.response.to.have.status(200);",
