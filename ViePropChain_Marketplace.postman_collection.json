    {
      "name": "2. Listings Management",
      "item": [
        {
          "name": "Create Listing",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Listing created\", function () {",
                  "    pm.response.to.have.status(201);",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.eql(true);",
                  "    pm.environment.set(\"listing_id\", jsonData.data._id);",
                  "    console.log(\"âœ… Listing ID: \" + jsonData.data._id);",
                  "    console.log(\"ðŸ’° Price: \" + jsonData.data.price.amount + \" wei\");",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tokenId\": {{token_id}},\n  \"contractAddress\": \"0x...\",\n  \"propertyId\": \"{{property_id}}\",\n  \"price\": \"1000000000000000000\",\n  \"description\": \"Beautiful villa for sale in District 2\"\n}"
            },
            "url": {
              "raw": "http://localhost:4008/listings",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4008",
              "path": ["listings"]
            },
            "description": "Create a new NFT listing\n\n**Requirements:**\n- Must be authenticated (JWT token)\n- Must have linked wallet\n- Must own the NFT (tokenId)\n\n**Price format:** Wei (1 ETH = 1000000000000000000 wei)"
          }
        },
        {
          "name": "Get All Listings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:4008/listings?page=1&limit=20&sortBy=listedAt&sortOrder=desc",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4008",
              "path": ["listings"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "propertyType",
                  "value": "villa",
                  "disabled": true
                },
                {
                  "key": "city",
                  "value": "Ho Chi Minh City",
                  "disabled": true
                },
                {
                  "key": "minPrice",
                  "value": "1000000000000000000",
                  "disabled": true
                },
                {
                  "key": "maxPrice",
                  "value": "5000000000000000000",
                  "disabled": true
                },
                {
                  "key": "sortBy",
                  "value": "listedAt"
                },
                {
                  "key": "sortOrder",
                  "value": "desc"
                }
              ]
            },
            "description": "Browse all active listings with optional filters"
          }
        },
        {
          "name": "Get Listing by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:4008/listings/{{listing_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4008",
              "path": ["listings", "{{listing_id}}"]
            }
          }
        },
        {
          "name": "Get Listing by Token ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:4008/listings/token/{{token_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4008",
              "path": ["listings", "token", "{{token_id}}"]
            }
          }
        },
        {
          "name": "Get My Listings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:4008/listings/my/listings?status=active",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4008",
              "path": ["listings", "my", "listings"],
              "query": [
                {
                  "key": "status",
                  "value": "active"
                }
              ]
            }
          }
        },
        {
          "name": "Update Listing",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": \"1500000000000000000\",\n  \"description\": \"Updated description - Price reduced!\"\n}"
            },
            "url": {
              "raw": "http://localhost:4008/listings/{{listing_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4008",
              "path": ["listings", "{{listing_id}}"]
            },
            "description": "Update listing price or description (seller only)"
          }
        },
        {
          "name": "Cancel Listing",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:4008/listings/{{listing_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4008",
              "path": ["listings", "{{listing_id}}"]
            },
            "description": "Cancel an active listing (seller only)"
          }
        },
        {
          "name": "Track Listing View",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "http://localhost:4008/listings/{{listing_id}}/view",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4008",
              "path": ["listings", "{{listing_id}}", "view"]
            },
            "description": "Track view count for analytics"
          }
        }
      ]
    },
    {
