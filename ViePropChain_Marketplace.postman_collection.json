                "exec": [
                  "pm.test(\"Offer created\", function () {",
                  "    pm.response.to.have.status(201);",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.eql(true);",
                  "    pm.environment.set(\"offer_id\", jsonData.data._id);",
                  "    console.log(\"âœ… Offer ID: \" + jsonData.data._id);",
                  "    console.log(\"ðŸ’° Offer Price: \" + jsonData.data.price.amount + \" wei\");",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"listingId\": \"{{listing_id}}\",\n  \"price\": \"900000000000000000\",\n  \"message\": \"Would you accept 0.9 ETH for this property?\"\n}"
            },
            "url": {
              "raw": "http://localhost:4008/offers",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4008",
              "path": ["offers"]
            },
            "description": "Make an offer on a listing\n\n**Requirements:**\n- Must be authenticated\n- Must have linked wallet\n- Cannot make offer on own listing\n- Listing must be active"
          }
        },
